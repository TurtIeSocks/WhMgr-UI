{{> header}}

{{> navbar}}

<br>
<h1 align="center" id="header">{{Remove Role}} {{name}} </h1>
<br>
<div class="w-75" style="float: none; margin: 0 auto;">
    <form action="/api/role/remove/{{id}}" method="post">
        <div align="center">
            <h3 id="message">{{Are you sure that you want to remove role}} {{name}}?</h3>
            <a href="/roles" id="cancel" name="cancel" class="btn btn-secondary">{{Cancel}}</a>
            <input type="hidden" id="guild_id" name="guild_id" required>
            <button type="submit" class="btn btn-danger">{{Delete}}</button>
        </div>
        <br>
    </form>
</div>

<script>
    $('#server_selector').prop('disabled', true);
</script>